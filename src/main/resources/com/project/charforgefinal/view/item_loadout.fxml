<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="root" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.charforgefinal.controller.ItemLoadoutController">

    <!-- HEADER -->
    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 24px;" styleClass="fantasy-header" text="CHOOSE YOUR GEAR" />
            <Label styleClass="fantasy-lore" text="Drag items from the Armory to your Backpack" />
        </VBox>
    </top>

    <!-- CENTER VIEW -->
    <center>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 0 20 0 20;" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">

            <!-- ARMORY -->
            <VBox alignment="CENTER" spacing="10" styleClass="stat-panel" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <Label alignment="CENTER" styleClass="fantasy-header" text="ARMORY" />
                <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                    <GridPane fx:id="gridArmory" alignment="TOP_CENTER" hgap="10" style="-fx-padding: 10;" styleClass="menu-panel-in" vgap="10">
                  <padding>
                     <Insets left="10.0" right="10.0" />
                  </padding></GridPane>
                </ScrollPane>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" />
            </padding>
            </VBox>

            <!-- ARROW ICON -->
            <Label style="-fx-text-fill: #555; -fx-font-size: 30px;" text="âž”" />

            <!-- BACKPACK -->
            <VBox alignment="CENTER" prefHeight="154.0" prefWidth="120.0" spacing="10" styleClass="stat-panel" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <Label alignment="CENTER" styleClass="fantasy-header" text="YOUR BACKPACK" />
                <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                    <GridPane fx:id="gridBackpack" alignment="TOP_CENTER" hgap="10" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="113.0" prefWidth="192.0" style="-fx-padding: 10;" styleClass="menu-panel-in" vgap="10">
                  <padding>
                     <Insets left="10.0" right="10.0" />
                  </padding></GridPane>
                </ScrollPane>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" />
            </padding>
            </VBox>
        </HBox>
    </center>

    <!-- WEIGHT BAR & ACTION -->
    <bottom>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 20;" VBox.vgrow="NEVER">
            <HBox alignment="CENTER" spacing="20">
                <Label styleClass="stat-label-name" text="Current Weight:" />
                <ProgressBar fx:id="progressWeight" prefWidth="300" progress="0.0" />
                <Label fx:id="lblWeightVal" styleClass="stat-label-value" text="0 / 50 kg" />
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
                <Button maxWidth="200" onAction="#handleFinish" prefHeight="50.0" prefWidth="185.0" style="-fx-background-color: #701b1b; -fx-background-radius: 10px; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-color: #c1b784; -fx-border-radius: 10px; -fx-padding: 10 30; -fx-cursor: hand; -fx-font-family: 'Palatino Linotype'; -fx-font-size: 14px" text="BEGIN JOURNEY" />
                <Button maxWidth="200" onAction="#handlePrevious" prefHeight="50.0" prefWidth="185.0" style="-fx-background-color: #626c78; -fx-background-radius: 10px; -fx-text-fill: #e0e0e0; -fx-font-family: 'Palatino Linotype'; -fx-font-weight: bold; -fx-font-size: 14px; -fx-cursor: hand; -fx-border-color: #c1b784; -fx-border-radius: 10px" text="PREVIOUS" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
